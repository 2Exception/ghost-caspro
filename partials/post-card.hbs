<article class="post-card {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
        <a class="post-card-image-link" href="{{url}}">
            <div class="post-card-image" style="background-image: url({{feature_image}})">
                <time class="post-card-image-time">{{date format="YYYY-MM-DD"}}</time>
            </div>
        </a>
    {{/if}}
    {{#unless feature_image}}
        <a class="post-card-date" href="{{url}}">
            <div class="post-card-month"><time >{{date format="MMM"}}</time></div>
            <div class="post-card-day"><time >{{date format="DD"}}</time></div>
            <div class="post-card-weekday"><time >{{date format="dddd"}}</time></div>
            <div class="post-card-year"><time>{{date format="YYYY"}}</time></div>  
        </a>
    {{/unless}}
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{excerpt words="33"}}</p>
            </section>
        </a>
        <footer class="post-card-meta">
      {{!--       {{#if author.profile_image}}
                <img class="author-profile-image" src="{{author.profile_image}}" alt="{{author.name}}" />
            {{/if}}
            <span class="post-card-author">{{author}}</span> --}}
{{!--             {{#primary_tag}}
                <a class="post-card-tags" href="{{url}}">{{name}}</a>
            {{/primary_tag}} --}}
            {{#foreach tags}}
                <a href="{{url}}" title="{{name}}" class="post-card-tags">{{name}}</a>
            {{/foreach}}
        </footer>
    </div>
</article>
